{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="row g-3">
        <div class="col-md-12">
            <label for="username" class="form-label">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control mb-3"/>
        </div>
        <div class="col-md-12">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="_password" class="form-control mb-3"/>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>

{% endblock %}
